extends base.pug

block content 
    .form-container.inner 
        form(method="POST").form.form__createRoom
            input(type="text", placeholder="제목", name="title", required)
            .form__radio 
                input(type="radio", id="toeic", name="filtering", value="toeic")
                label(for="toeic") 토익
                input(type="radio", id="official", name="filtering", value="official")
                label(for="official") 공시
                input(type="radio", id="self", name="filtering", value="self")
                label(for="self") 자율
            textarea.form__textarea(placeholder="내용을 입력하세요.", cols="30", rows="10", name="content", required)
            input(type="submit", value="스터디 생성")